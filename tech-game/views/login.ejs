<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %> 
<body>
    <%- include('partials/header') %>

    <div class="loginbody">

    <div class="login">
    <h1>Inicia sesión</h1>
    <p>ingrese con su usuario y contraseña</p>
    </div>

    <div class="formulario">
        <% if (typeof errores != "undefined") { %>
            <ul>
                <% errores.forEach(error => { %>
                    <li>
                        <%- error.msg %>
                    </li>
                <% }) %>
            </ul>
        <% } %>
        <form action="" method="post" id="form_login">
            <div class="form_login">
                <label for="">E-mail</label>
                <input type="text" placeholder="email" name="email" id="email" class="form-control">
                <span id="emailErrors" class="text-danger"></span>
            </div>

            <div class="form-login">
                <label for="">Contraseña</label>
                <input type="password" placeholder="contraseña" name="password" id="pass" class="form-control">
                <span id="passErrors" class="text-danger"></span>
            </div>

            <div class="recordar">
                <input type="checkbox" name="recordar" id="recordar">
                <label for="recordar">Recordarme</label>
                <span id="recordarErrors" class="mx-4 text-warning"></span>
            </div>

            <a href="">¿Olvidaste tu contraseña?</a>

            
            <button type="submit">iniciar sesión</button>
            <div class="mt-2"><span id="formErrors" class="text-danger "></span>
            </div>
        </form>

        <hr width="100%">

        <div class="registrologin">
            <h2>Create una cuenta</h2>
            <p>¿no tienes una cuenta? registrate</p>
            <a href="/users/registro"><button type="submit">Registrarse</button></a>
            </form>
        </div>
    </div>

</div>
<script src="/javascripts/login.js"></script>
    <%- include('partials/footer') %> 


    <%- include('partials/scripts') %> 
</body>
</html>