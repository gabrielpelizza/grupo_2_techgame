<!DOCTYPE html>
<html>
  <%- include('partials/head') %> 
  <body>
    <%- include('partials/header') %>
    
    <main>

      <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="https://http2.mlstatic.com/teclado-gamer-genius-gx-scorpion-k215-retroiluminado-almagro-D_Q_NP_627377-MLA31978430096_082019-F.webp" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
              <h1>TECH GAME</h1>

            </div>
          </div>
          <div class="carousel-item">
            <img src="https://www.cosadehombres.net/wp-content/uploads/2020/07/Predator-Orion-3000-PO3-620-High_06-2-1024x576-1200x500.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
              <h1>TECH GAME</h1>
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
  
  
      <div class="titulo col-12">
        <h2>Productos Populares</h2>
      </div>
  

      <div class="glide contenedor-slider">
        <div class="glide__track " data-glide-el="track">
            <div class="glide__slides">
              <% product.forEach(producto => { %>
              <div class="card glide__slide" style="width: 18rem;">
                <img src="/images/productos/<%= producto.image %> " class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= producto.product_name.slice(0,29)%>...</h5>
                  <p class="precio card-text">$<%= toThousand(producto.price - producto.price * producto.discount / 100) %></p>
                  <a href="productos/detalle/<%= producto.id %>" class="btn btn-primary">ver</a>
                </div>
              </div>  
              <% }) %>
            </div>
          </div>
          <div class="glide__arrows" data-glide-el="controls">
            <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><i class="fas fa-chevron-left"></i></button>
            <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><i class="fas fa-chevron-right"></i></button>
          </div>
        </div>
      </div>
  
  
      <!-- categorias -->
      <div class="contenedor--slider">
        <div class="carousel">
          <div class="carousel__contenedor">
            <button aria-label="Anterior" class="carousel__anterior"><i class="fas fa-chevron-left"></i></button> <!-- aria-label : "texto" -> dispositivos de lectura indica que es tal cosa -->     
            <div class="carousel__lista">
              <% categorias.forEach(cadacategoria => { %>
                  <a href="/productos/filter?categoria=<%= cadacategoria.id %>&marca=0">
                    <div class="carousel__elemento">
                      <span></span>
                      <span></span>
                      <span></span>
                      <span></span>
                         <h5><%= cadacategoria.category %> </h5>
                    </div>
                  </a>
                
              <% }) %>         
            </div>
            <button aria-label="Siguiente" class="carousel__siguiente"><i class="fas fa-chevron-right"></i></button> <!-- aria-label : "texto" -> dispositivos de lectura indica que es tal cosa -->
          </div>
          <div role="tablist" class="carousel__indicadores">
          </div> <!-- se agrega un indicador por cada uno de las paginas q tengamoos, (role="tablist" -> indica que es una lista de elementos de tabulacion/indicadores) -->
        </div>
      </div>
      <!-- fin  -->

      
      <div class="titulo col-12">
        <h2>Ofertas</h2>
      </div>
  
      <div class="contenedor-productos">
        <div class="fila">
          <% product.forEach(producto => { %>
            <div class="tarjeta-producto">
              <a href="productos/detalle/<%= producto.id %> ">
                <div class="img-prod">
                  <img src="/images/productos/<%= producto.image %>" alt="">
                </div>
                <h3><%= producto.product_name%></h3>
                <div class="descripcion">
                  <span class="precio">$<%= producto.price%></span>
                  <span class="descuento">%<%= producto.discount%></span>
                </div>
              </a>
            </div>
          <% }) %>
        </div>
      </div>
      
      <div class="contenedor-marcas">
        <div class="logos-marcas">
          <div class="contenedor-logos">
            <img src="https://www.araexpress.am/media/image/11860/aorus.png?size=250" alt=""> 
          </div>
          <div class="contenedor-logos">
            <img src="https://www.asukaexpress.com/image/asukaexpress/image/cache/data/Brand/HyperX-250x250.png" alt=""> 
          </div>
          <div class="contenedor-logos">
            <img src="https://logo-logos.com/wp-content/uploads/2016/10/ASUS_logo_logotype.png" alt=""> 
          </div>
          <div class="contenedor-logos">
            <img src="https://logo-logos.com/wp-content/uploads/2016/10/GeForce_logo_logotype.png" alt=""> 
          </div>
        </div>
      </div>
  
    
    
    </main>

    <%- include('partials/footer') %> 

    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    <script src="/javascripts/slider.js"></script>
    <script src="/javascripts/categoriasSlider.js"></script>

    
    <%- include('partials/scripts') %> 
  </body>
</html>
